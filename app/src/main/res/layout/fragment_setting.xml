<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.settings.SettingFragment">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <Space
        android:id="@+id/top_space"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <TextView
        android:id="@+id/tv_schedule_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:letterSpacing="0.1"
        android:text="@string/schedule"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
        android:textColor="?attr/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_space" />

      <FrameLayout
        android:id="@+id/notification_container"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_theme_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_schedule_header">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:baselineAligned="false"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingStart="20dp"
          android:paddingEnd="16dp">

          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/daily_notification"
              android:textColor="?attr/colorOnSurface"
              android:textSize="15sp"
              android:textStyle="bold" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="@string/get_daily_reminder"
              android:textColor="?attr/colorOnSurfaceVariant"
              android:textSize="12sp" />

          </LinearLayout>

          <FrameLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_switch_area"
            android:gravity="center">

            <com.google.android.material.switchmaterial.SwitchMaterial
              android:id="@+id/switch_notification"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:paddingVertical="@dimen/short_margin"
              app:thumbTint="?attr/colorPrimaryInverse"
              app:trackTint="?attr/colorPrimaryContainer" />

          </FrameLayout>
        </LinearLayout>
      </FrameLayout>

      <!-- Debug Section - Only visible in debug builds -->
      <TextView
        android:id="@+id/tv_debug_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:letterSpacing="0.1"
        android:text="@string/debug_controls"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
        android:textColor="?attr/colorError"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notification_container"
        tools:visibility="visible" />

      <LinearLayout
        android:id="@+id/debug_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_theme_container"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_debug_header"
        tools:visibility="visible">

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_test_once"
          style="@style/Widget.Material3.Button.ElevatedButton"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/test_notification_once"
          android:textAllCaps="false"
          app:icon="@drawable/ic_send" />

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_test_periodic"
          style="@style/Widget.Material3.Button.ElevatedButton"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="@string/start_periodic_test_15_min"
          android:textAllCaps="false"
          app:icon="@drawable/ic_clock" />

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_stop_periodic"
          style="@style/Widget.Material3.Button.TonalButton"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="@string/stop_periodic_test"
          android:textAllCaps="false"
          app:icon="@drawable/ic_cross" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:fontFamily="@font/nunito_sans_italic"
          android:text="@string/note_check_logcat_for_detailed_logs"
          android:textColor="?attr/colorOnSurfaceVariant"
          android:textSize="11sp" />

      </LinearLayout>

      <TextView
        android:id="@+id/tv_appearance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:letterSpacing="0.1"
        android:text="@string/appearance"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
        android:textColor="?attr/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/debug_container" />

      <!-- Theme Toggle Container -->
      <FrameLayout
        android:id="@+id/theme_container"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_theme_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_appearance_title">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:baselineAligned="false"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingStart="20dp"
          android:paddingEnd="16dp">

          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/dark_theme"
              android:textColor="?attr/colorOnSurface"
              android:textSize="15sp"
              android:textStyle="bold" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="@string/easy_on_the_eyes"
              android:textColor="?attr/colorOnSurfaceVariant"
              android:textSize="12sp" />

          </LinearLayout>

          <FrameLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_switch_area"
            android:gravity="center">

            <com.google.android.material.switchmaterial.SwitchMaterial
              android:id="@+id/switch_theme"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:paddingVertical="@dimen/short_margin"
              app:thumbTint="?attr/colorPrimaryInverse"
              app:trackTint="?attr/colorPrimaryContainer" />

          </FrameLayout>
        </LinearLayout>
      </FrameLayout>

      <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:alpha="0.2"
        android:background="?attr/colorOutline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/theme_container" />

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_system"
          style="@style/Widget.MaterialComponents.Button.OutlinedButton"
          android:layout_width="0dp"
          android:layout_height="44dp"
          android:layout_marginEnd="8dp"
          android:layout_weight="1"
          android:text="@string/system"
          android:textSize="12sp"
          app:cornerRadius="8dp"
          app:strokeColor="?attr/colorPrimary"
          app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_light"
          style="@style/Widget.MaterialComponents.Button.OutlinedButton"
          android:layout_width="0dp"
          android:layout_height="44dp"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="4dp"
          android:layout_weight="1"
          android:text="@string/light"
          android:textSize="12sp"
          app:cornerRadius="8dp"
          app:strokeColor="?attr/colorPrimary"
          app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_dark"
          style="@style/Widget.MaterialComponents.Button.OutlinedButton"
          android:layout_width="0dp"
          android:layout_height="44dp"
          android:layout_marginStart="8dp"
          android:layout_weight="1"
          android:text="@string/dark"
          android:textSize="12sp"
          app:cornerRadius="8dp"
          app:strokeColor="?attr/colorPrimary"
          app:strokeWidth="1dp" />

      </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>