<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.settings.SettingFragment">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <Space
        android:id="@+id/top_space"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <TextView
        style="@style/SettingsTextHeaderStyle"
        android:text="@string/schedule" />

      <LinearLayout
        style="@style/SettingsCardStyle"
        android:baselineAligned="false">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:orientation="vertical">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_notification"
            android:textColor="?attr/colorOnSurface"
            android:textSize="15sp"
            android:textStyle="bold" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/get_daily_reminder"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp" />

        </LinearLayout>

        <FrameLayout
          android:layout_width="60dp"
          android:layout_height="wrap_content"
          android:background="@drawable/bg_switch_area"
          android:gravity="center">

          <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_notification"
            style="@style/SwitchStyle" />

        </FrameLayout>
      </LinearLayout>

      <!-- Debug Section - Only visible in debug builds -->
      <TextView
        android:id="@+id/tv_debug_header"
        style="@style/SettingsTextHeaderStyle"
        android:text="@string/debug_controls"
        android:textColor="?attr/colorError"
        android:visibility="gone"
        tools:visibility="visible" />

      <LinearLayout
        android:id="@+id/debug_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_card"
        android:layout_marginTop="@dimen/margin"
        android:background="@drawable/bg_theme_container"
        android:orientation="vertical"
        android:padding="@dimen/padding_card"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:baselineAligned="false">

          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/daily_notification_use_worker_only"
              android:textColor="?attr/colorOnSurface"
              android:textSize="15sp"
              android:textStyle="bold" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="@string/only_works_if_the_app_not_closed"
              android:textColor="?attr/colorOnSurfaceVariant"
              android:textSize="12sp" />

          </LinearLayout>

          <FrameLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_switch_area"
            android:gravity="center">

            <com.google.android.material.switchmaterial.SwitchMaterial
              android:id="@+id/switch_notification_debug"
              style="@style/SwitchStyle" />

          </FrameLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_test_once"
          style="@style/Widget.Material3.Button.ElevatedButton"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin"
          android:text="@string/test_notification_once"
          android:textAllCaps="false"
          app:icon="@drawable/ic_send" />

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_test_periodic"
          style="@style/Widget.Material3.Button.ElevatedButton"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/short_margin"
          android:text="@string/start_periodic_test_15_min"
          android:textAllCaps="false"
          app:icon="@drawable/ic_clock" />

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_stop_periodic"
          style="@style/Widget.Material3.Button.TonalButton"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/short_margin"
          android:text="@string/stop_periodic_test"
          android:textAllCaps="false"
          app:icon="@drawable/ic_cross" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:fontFamily="@font/nunito_sans_italic"
          android:text="@string/note_check_logcat_for_detailed_logs"
          android:textColor="?attr/colorOnSurfaceVariant"
          android:textSize="11sp" />

      </LinearLayout>

      <TextView
        style="@style/SettingsTextHeaderStyle"
        android:text="@string/appearance" />

      <!-- Theme Toggle Container -->
      <LinearLayout
        style="@style/SettingsCardStyle"
        android:baselineAligned="false">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="@string/dark_theme"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/easy_on_the_eyes"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp" />

        </LinearLayout>

        <FrameLayout
          android:layout_width="60dp"
          android:layout_height="wrap_content"
          android:background="@drawable/bg_switch_area"
          android:gravity="center">

          <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_theme"
            style="@style/SwitchStyle" />

        </FrameLayout>
      </LinearLayout>

      <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:alpha="0.2"
        android:background="?attr/colorOutline" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="200dp">

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_system"
          style="@style/ButtonThemesStyle"
          android:layout_marginEnd="8dp"
          android:text="@string/system" />

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_light"
          style="@style/ButtonThemesStyle"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="4dp"
          android:text="@string/light" />

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_dark"
          style="@style/ButtonThemesStyle"
          android:layout_marginStart="8dp"
          android:text="@string/dark" />

      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>