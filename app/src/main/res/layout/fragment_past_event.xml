<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.past.PastEventViewModel">

  <com.google.android.material.appbar.AppBarLayout
    android:id="@+id/appBarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:elevation="0dp"
    android:fitsSystemWindows="true"
    app:liftOnScroll="true"
    app:statusBarForeground="?attr/colorSurface">

    <com.google.android.material.appbar.MaterialToolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="?attr/actionBarSize"
      android:background="?attr/colorSurface"
      android:elevation="4dp"
      android:outlineProvider="background"
      android:paddingHorizontal="16dp"
      android:theme="@style/ThemeOverlay.Material3.Toolbar.Surface"
      app:contentInsetStartWithNavigation="0dp"
      app:navigationIconTint="?attr/colorOnSurface"
      app:layout_scrollFlags="scroll|enterAlways">

      <!-- Custom content inside Toolbar -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start|center_vertical">

        <TextView
          android:id="@+id/titleText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/dicoding_event"
          android:textAppearance="@style/ToolbarTitleText"
          android:textColor="?attr/colorOnSurface"
          android:fontFamily="@font/nunito_sans_regular" />

        <TextView
          android:id="@+id/subtitleText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/past_events_header"
          android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
          android:textColor="?attr/colorOnSurfaceVariant" />
      </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>
  </com.google.android.material.appbar.AppBarLayout>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rv_events"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:scrollbars="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:listitem="@layout/item_event" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>