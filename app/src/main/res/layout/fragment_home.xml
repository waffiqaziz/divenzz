<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.home.HomeFragment">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/short_margin">

    <TextView
      android:id="@+id/tv_upcoming_events"
      style="@style/ToolbarTitleStyle"
      android:layout_marginStart="@dimen/short_margin"
      android:layout_marginTop="@dimen/padding_top_bar"
      android:text="@string/upcoming_events" />

    <com.google.android.material.divider.MaterialDivider
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/short_margin"
      android:layout_marginTop="@dimen/short_margin" />

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_events_horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/short_margin"
      android:clipToPadding="false"
      android:maxHeight="200dp"
      android:orientation="horizontal"
      android:scrollbars="horizontal"
      tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:layout_height="245dp"
      tools:listitem="@layout/item_event" />

    <TextView
      android:id="@+id/tv_past_events"
      style="@style/ToolbarTitleStyle"
      android:layout_marginStart="@dimen/short_margin"
      android:layout_marginTop="@dimen/margin"
      android:text="@string/past_events" />

    <com.google.android.material.divider.MaterialDivider
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/short_margin"
      android:layout_marginVertical="@dimen/short_margin" />

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_events_vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/short_margin"
      android:clipToPadding="false"
      android:paddingBottom="140dp"
      android:scrollbars="vertical"
      tools:listitem="@layout/item_small_event" />

  </LinearLayout>

  <include
    android:id="@+id/loading"
    layout="@layout/progress_circular" />

  <include
    android:id="@+id/error"
    layout="@layout/error_view" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>