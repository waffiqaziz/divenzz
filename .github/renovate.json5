{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended'
  ],
  assignees: [
    'waffiqaziz'
  ],
  addLabels: [
    'renovate'
  ],
  packageRules: [
    {
      // Default prefix for all dependencies
      matchPackageNames: [
        '*',
      ],
      commitMessagePrefix: 'chore(deps):',
    },
    {
      // Specific prefix for GitHub Actions
      matchDepTypes: [
        'action',
      ],
      commitMessagePrefix: 'chore(ci):',
    },
  ]
}
